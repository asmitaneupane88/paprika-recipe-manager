<local:NavigatorPage
    x:Class="RecipeApp.Controls.Pages.RecipeListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RecipeApp.Controls.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:RecipeApp.Models"
    xmlns:converters="using:RecipeApp.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>

            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBox
            Grid.Row="0"
            Grid.Column="0"
            PlaceholderText="Recipe Title"
            Margin="10"
            Text="{x:Bind SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Width="300"/>

        <!-- note that placeholder text does not render correctly -->
        <ComboBox x:Name="TagCombo"
            Grid.Row="0"
            Grid.Column="1"
            Margin="10"
            Width="200"
            SelectionChanged="OnTagComboSelectionChanged"
            ItemsSource="{x:Bind FilteredTags, Mode=OneWay}"
            DisplayMemberPath="Name"/>

        <ScrollView Grid.Row="0" Grid.Column="2">
            <StackPanel Orientation="Horizontal">
                <ItemsRepeater ItemsSource="{x:Bind SelectedTags}">
                    <ItemsRepeater.Layout>
                        <StackLayout Orientation="Horizontal" Spacing="5"/>
                    </ItemsRepeater.Layout>

                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="models:SavedTag">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                        BorderBrush="{ThemeResource OutlineColor}"
                                        Background="{ThemeResource SurfaceVariantColor}"
                                        BorderThickness="1" Padding="5" CornerRadius="16" Margin="5"
                                        Tag="{x:Bind}" PointerPressed="TagCard_OnPointerPressed">
                                <TextBlock Text="{x:Bind Name}" VerticalAlignment="Center" Margin="5"/>
                                <SymbolIcon Symbol="Cancel"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </StackPanel>
        </ScrollView>

        <StackPanel
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Grid.Row="1"
            Orientation="Horizontal"
            HorizontalAlignment="Left">

            <Button Margin="10"
                    IsEnabled="{x:Bind CardsSelected, Mode=OneWay}"
                    Click="OnButtonPrintClick">
                <SymbolIcon Symbol="Print"/>
            </Button>

            <Button Margin="10"
                    IsEnabled="{x:Bind CardsSelected, Mode=OneWay}"
                    Click="OnButtonRemoveClick">
                <SymbolIcon Symbol="Delete"/>
            </Button>

            <Button Margin="10"
                    Click="OnButtonAddClick">
                <SymbolIcon Symbol="Edit"/>
            </Button>

            <Button Margin="10"
                    Click="OnButtonChatClick">
                <SymbolIcon Symbol="Message"/>
            </Button>

            <Button Margin="10"
                    Click="OnButtonUploadPdfClick">
                <SymbolIcon Symbol="Upload"/>
            </Button>
        </StackPanel>

        <ListView
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            ItemsSource="{x:Bind FilteredRecipes, Mode=OneWay}"
            IsItemClickEnabled="True"
            SelectionChanged="OnRecipeCardClicked">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:RecipeCard">
                    <Border BorderBrush="{ThemeResource OutlineColor}" BorderThickness="1" Margin="10" Padding="10" CornerRadius="8" Tag="{x:Bind}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Margin="10"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    CornerRadius="10"
                                    BorderThickness="2"
                                    BorderBrush="{ThemeResource PrimaryColor}"
                                    Background="{ThemeResource SurfaceVariantColor}">
                                <Image
                                    Source="{x:Bind SavedRecipe.ImageUrl}"
                                    Width="80" Height="80"
                                    Stretch="UniformToFill"/>
                            </Border>


                            <StackPanel Grid.Column="1" VerticalAlignment="Center"
                                        Margin="5" >
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                    <TextBlock
                                               Text="{x:Bind SavedRecipe.Title}"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               MaxLines="1"
                                               VerticalAlignment="Center"/>
                                    <FontIcon
                                        Grid.Column="0"
<<<<<<< HEAD
                                        Glyph="&#xE7C3;"
                                        Foreground="Indigo"
=======
                                        Glyph="&#xE8A7;"
                                        Foreground="DarkRed"
>>>>>>> 834accd (fix(recipes): ensure uploaded PDF recipes set PdfPath and show document icon)
                                        FontSize="18"
                                        VerticalAlignment="Center"
                                        Margin="4,0,0,0"
                                        ToolTipService.ToolTip="PDF recipe"
                                        Visibility="{x:Bind SavedRecipe.HasPdf, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                </StackPanel>

                                    <RatingControl Grid.Column="1"
                                                   Value="{x:Bind SavedRecipe.Rating}"
                                                   MaxRating="{x:Bind SavedRecipe.BindableMaxRating}"
                                                   IsReadOnly="True"/>

                                    <!--Got to use "Binding" here over x:Bind-->
                                    <CheckBox
                                        Grid.Column="2"
                                        IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                        Checked="OnRecipeCardChecked"
                                        Unchecked="OnRecipeCardChecked"/>
                                </Grid>

                                <TextBlock Text="{x:Bind SavedRecipe.Description}"
                                           MaxLines="3"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</local:NavigatorPage>
