<?xml version="1.0" encoding="utf-8" ?>
<local:NavigatorPage
    x:Class="RecipeApp.Controls.Pages.EditRecipe"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RecipeApp.Controls.Pages"
    xmlns:models="using:RecipeApp.Models">

    <Grid>
        <ScrollViewer>
            <StackPanel Padding="20" Spacing="20">
                <!-- Header Section -->
                <TextBlock Text="Edit Recipe" 
                         Style="{ThemeResource TitleLargeTextBlockStyle}"/>

                <!-- Recipe Form -->
                <StackPanel Spacing="16">
                    <!-- Title -->
                    <StackPanel>
                        <TextBlock Text="Title" Style="{ThemeResource BodyTextBlockStyle}"/>
                        <TextBox Text="{x:Bind Recipe.Title, Mode=TwoWay}"
                                PlaceholderText="Enter recipe title"/>
                    </StackPanel>

                    <!-- Description -->
                    <StackPanel>
                        <TextBlock Text="Description" Style="{ThemeResource BodyTextBlockStyle}"/>
                        <TextBox Text="{x:Bind Recipe.Description, Mode=TwoWay}"
                                PlaceholderText="Enter recipe description"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                Height="100"/>
                    </StackPanel>

                    <!-- Category -->
                    <StackPanel>
                        <TextBlock Text="Category" Style="{ThemeResource BodyTextBlockStyle}"/>
                        <TextBox Text="{x:Bind Recipe.Category, Mode=TwoWay}"
                                PlaceholderText="Enter recipe category"/>
                    </StackPanel>

                    <!-- Rating -->
                    <StackPanel>
                        <TextBlock Text="Rating" Style="{ThemeResource BodyTextBlockStyle}"/>
                        <RatingControl Value="{x:Bind Recipe.Rating, Mode=TwoWay}"
                                     IsReadOnly="False"/>
                    </StackPanel>

                    <!-- Image URL -->
                    <StackPanel>
                        <TextBlock Text="Image URL" Style="{ThemeResource BodyTextBlockStyle}"/>
                        <TextBox Text="{x:Bind Recipe.ImageUrl, Mode=TwoWay}"
                                PlaceholderText="Enter image URL"/>
                    </StackPanel>

                    <!-- Source URL -->
                    <StackPanel>
                        <TextBlock Text="Source URL" Style="{ThemeResource BodyTextBlockStyle}"/>
                        <TextBox Text="{x:Bind Recipe.SourceUrl, Mode=TwoWay}"
                                PlaceholderText="Enter source URL"/>
                    </StackPanel>

                    <!-- User Notes -->
                    <StackPanel>
                        <TextBlock Text="Notes" Style="{ThemeResource BodyTextBlockStyle}"/>
                        <TextBox Text="{x:Bind Recipe.UserNote, Mode=TwoWay}"
                                PlaceholderText="Enter your notes"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                Height="100"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Save Button -->
        <CommandBar VerticalAlignment="Bottom"
                   Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <AppBarButton Label="Save Changes" 
                         Icon="Save"
                         Click="SaveButton_Click"/>
            <AppBarButton Label="Cancel" 
                         Icon="Cancel"
                         Click="CancelButton_Click"/>
        </CommandBar>
    </Grid>
</local:NavigatorPage>