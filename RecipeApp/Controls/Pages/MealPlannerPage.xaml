<local:NavigatorPage
    x:Class="RecipeApp.Controls.Pages.MealPlannerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:RecipeApp.Controls.Pages"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Weekly Meal Planner"
                 Grid.Row="0"
                 Style="{StaticResource TitleTextBlockStyle}"
                 Margin="0,0,0,20"/>

        <!-- Calendar Grid -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Days of week header -->
                <RowDefinition Height="*"/> <!-- Breakfast -->
                <RowDefinition Height="*"/> <!-- Lunch -->
                <RowDefinition Height="*"/> <!-- Dinner -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> <!-- Time slots -->
                <ColumnDefinition Width="*"/> <!-- Monday -->
                <ColumnDefinition Width="*"/> <!-- Tuesday -->
                <ColumnDefinition Width="*"/> <!-- Wednesday -->
                <ColumnDefinition Width="*"/> <!-- Thursday -->
                <ColumnDefinition Width="*"/> <!-- Friday -->
                <ColumnDefinition Width="*"/> <!-- Saturday -->
                <ColumnDefinition Width="*"/> <!-- Sunday -->
            </Grid.ColumnDefinitions>

            <!-- Time slots -->
            <TextBlock Text="" Grid.Row="0" Grid.Column="0" Style="{StaticResource BaseTextBlockStyle}" Margin="5"/>
            <TextBlock Text="Breakfast" Grid.Row="1" Grid.Column="0" Style="{StaticResource BaseTextBlockStyle}" Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="Lunch" Grid.Row="2" Grid.Column="0" Style="{StaticResource BaseTextBlockStyle}" Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="Dinner" Grid.Row="3" Grid.Column="0" Style="{StaticResource BaseTextBlockStyle}" Margin="5" VerticalAlignment="Center"/>

            <!-- Days of the week headers -->
            <TextBlock Text="Monday" Grid.Row="0" Grid.Column="1" Style="{StaticResource BaseTextBlockStyle}" Margin="5" HorizontalAlignment="Center"/>
            <TextBlock Text="Tuesday" Grid.Row="0" Grid.Column="2" Style="{StaticResource BaseTextBlockStyle}" Margin="5" HorizontalAlignment="Center"/>
            <TextBlock Text="Wednesday" Grid.Row="0" Grid.Column="3" Style="{StaticResource BaseTextBlockStyle}" Margin="5" HorizontalAlignment="Center"/>
            <TextBlock Text="Thursday" Grid.Row="0" Grid.Column="4" Style="{StaticResource BaseTextBlockStyle}" Margin="5" HorizontalAlignment="Center"/>
            <TextBlock Text="Friday" Grid.Row="0" Grid.Column="5" Style="{StaticResource BaseTextBlockStyle}" Margin="5" HorizontalAlignment="Center"/>
            <TextBlock Text="Saturday" Grid.Row="0" Grid.Column="6" Style="{StaticResource BaseTextBlockStyle}" Margin="5" HorizontalAlignment="Center"/>
            <TextBlock Text="Sunday" Grid.Row="0" Grid.Column="7" Style="{StaticResource BaseTextBlockStyle}" Margin="5" HorizontalAlignment="Center"/>

            <!-- Meal slots grid -->
            <Border Grid.Row="1" Grid.Column="1" Grid.RowSpan="3" Grid.ColumnSpan="7">
                <Grid>
                    <!-- Grid lines for the calendar -->
                    <Rectangle Stroke="{ThemeResource CardStrokeColorDefaultBrush}" StrokeThickness="1" Fill="Transparent"/>
                    <Grid x:Name="MealSlotsGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</local:NavigatorPage>