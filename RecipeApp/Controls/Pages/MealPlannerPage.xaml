<local:NavigatorPage
    x:Class="RecipeApp.Controls.Pages.MealPlannerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:RecipeApp.Controls.Pages"
    mc:Ignorable="d">

    <local:NavigatorPage.Resources>
        <SolidColorBrush x:Key="TodayColumnBrush" Color="#10000000"/>
    </local:NavigatorPage.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with navigation -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center">
                <TextBlock Text="Weekly Meal Planner"
                         Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock x:Name="DateRangeText"
                         Style="{StaticResource SubtitleTextBlockStyle}"
                         Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Navigation Controls -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Spacing="4">
                <Button x:Name="PreviousWeekButton" 
                        Click="PreviousWeekButton_Click"
                        Style="{StaticResource AccentButtonStyle}"
                        Width="32" Height="32"
                        Padding="0">
                    <FontIcon Glyph="&#xE76B;" FontFamily="Segoe Fluent Icons"/>
                    <ToolTipService.ToolTip>
                        <ToolTip Content="Previous Week"/>
                    </ToolTipService.ToolTip>
                </Button>

                <Button x:Name="TodayButton"
                        Click="TodayButton_Click"
                        Style="{StaticResource AccentButtonStyle}">
                    <TextBlock Text="Today" />
                    <ToolTipService.ToolTip>
                        <ToolTip Content="Go to Current Week"/>
                    </ToolTipService.ToolTip>
                </Button>

                <Button x:Name="NextWeekButton"
                        Click="NextWeekButton_Click"
                        Style="{StaticResource AccentButtonStyle}"
                        Width="32" Height="32"
                        Padding="0">
                    <FontIcon Glyph="&#xE76C;" FontFamily="Segoe Fluent Icons"/>
                    <ToolTipService.ToolTip>
                        <ToolTip Content="Next Week"/>
                    </ToolTipService.ToolTip>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Calendar Grid -->
        <Grid x:Name="CalendarGrid" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Days of week header -->
                <RowDefinition Height="*"/> <!-- Breakfast -->
                <RowDefinition Height="*"/> <!-- Lunch -->
                <RowDefinition Height="*"/> <!-- Dinner -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> <!-- Time slots -->
                <ColumnDefinition Width="*"/> <!-- Monday -->
                <ColumnDefinition Width="*"/> <!-- Tuesday -->
                <ColumnDefinition Width="*"/> <!-- Wednesday -->
                <ColumnDefinition Width="*"/> <!-- Thursday -->
                <ColumnDefinition Width="*"/> <!-- Friday -->
                <ColumnDefinition Width="*"/> <!-- Saturday -->
                <ColumnDefinition Width="*"/> <!-- Sunday -->
            </Grid.ColumnDefinitions>

            <!-- Time slots -->
            <TextBlock Text="" Grid.Row="0" Grid.Column="0" Style="{StaticResource BaseTextBlockStyle}" Margin="5"/>
            <TextBlock Text="Breakfast" Grid.Row="1" Grid.Column="0" Style="{StaticResource BaseTextBlockStyle}" Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="Lunch" Grid.Row="2" Grid.Column="0" Style="{StaticResource BaseTextBlockStyle}" Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="Dinner" Grid.Row="3" Grid.Column="0" Style="{StaticResource BaseTextBlockStyle}" Margin="5" VerticalAlignment="Center"/>

            <!-- Days of the week headers -->
            <TextBlock x:Name="Day0Header" Grid.Row="0" Grid.Column="1" Style="{StaticResource BaseTextBlockStyle}" Margin="5" HorizontalAlignment="Center" TextAlignment="Center"/>
            <TextBlock x:Name="Day1Header" Grid.Row="0" Grid.Column="2" Style="{StaticResource BaseTextBlockStyle}" Margin="5" HorizontalAlignment="Center" TextAlignment="Center"/>
            <TextBlock x:Name="Day2Header" Grid.Row="0" Grid.Column="3" Style="{StaticResource BaseTextBlockStyle}" Margin="5" HorizontalAlignment="Center" TextAlignment="Center"/>
            <TextBlock x:Name="Day3Header" Grid.Row="0" Grid.Column="4" Style="{StaticResource BaseTextBlockStyle}" Margin="5" HorizontalAlignment="Center" TextAlignment="Center"/>
            <TextBlock x:Name="Day4Header" Grid.Row="0" Grid.Column="5" Style="{StaticResource BaseTextBlockStyle}" Margin="5" HorizontalAlignment="Center" TextAlignment="Center"/>
            <TextBlock x:Name="Day5Header" Grid.Row="0" Grid.Column="6" Style="{StaticResource BaseTextBlockStyle}" Margin="5" HorizontalAlignment="Center" TextAlignment="Center"/>
            <TextBlock x:Name="Day6Header" Grid.Row="0" Grid.Column="7" Style="{StaticResource BaseTextBlockStyle}" Margin="5" HorizontalAlignment="Center" TextAlignment="Center"/>

            <!-- Meal slots grid -->
            <Border Grid.Row="1" Grid.Column="1" Grid.RowSpan="3" Grid.ColumnSpan="7">
                <Grid>
                    <!-- Grid lines for the calendar -->
                    <Rectangle Stroke="{ThemeResource CardStrokeColorDefaultBrush}" StrokeThickness="1" Fill="Transparent"/>
                    <Grid x:Name="MealSlotsGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</local:NavigatorPage>