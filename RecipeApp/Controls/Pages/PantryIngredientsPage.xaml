<local:NavigatorPage
    x:Class="RecipeApp.Controls.Pages.PantryIngredientsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RecipeApp.Controls.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:RecipeApp.Models"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
<ListView
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            ItemsSource="{x:Bind AllIngredients, Mode=OneWay}">

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:IngredientCard">
                    <Border BorderBrush="{ThemeResource OutlineColor}" BorderThickness="1" Margin="10" Padding="10" CornerRadius="8" Tag="{x:Bind}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Text="{x:Bind Ingredient.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch"/>
                            <TextBox Grid.Column="1" Text="{x:Bind Ingredient.ModifierNote, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200"/>

                            <NumberBox Grid.Column="2"
                                       PlaceholderText="Qty"
                                       Value="{x:Bind Ingredient.Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       Minimum="0"/>

                            <ComboBox Grid.Column="3"
                                      SelectedItem="{x:Bind Ingredient.Unit, Mode=TwoWay}"
                                      Width="150">
                                <system:String>TSP</system:String>
                                <system:String>TBSP</system:String>
                                <system:String>CUP</system:String>
                                <system:String>PINT</system:String>
                                <system:String>QUART</system:String>
                                <system:String>GALLON</system:String>
                                <system:String>OZ</system:String>
                                <system:String>LB</system:String>
                                <system:String>KG</system:String>
                                <system:String>ITEM</system:String>
                            </ComboBox>

                            <!--Got to use "Binding" here over x:Bind-->
                            <CheckBox
                                Grid.Column="4"
                                IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                Checked="OnRecipeCardChecked"
                                Unchecked="OnRecipeCardChecked"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</local:NavigatorPage>
