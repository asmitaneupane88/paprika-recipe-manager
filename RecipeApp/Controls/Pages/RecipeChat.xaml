<local:NavigatorPage
    x:Class="RecipeApp.Controls.Pages.RecipeChat"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RecipeApp.Controls.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:RecipeApp.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border x:Name="SavedRecipeHolder" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3"
                CornerRadius="8" BorderThickness="1" Margin="10"
                BorderBrush="{ThemeResource OutlineColor}">
            <!-- load this in constructor -->
        </Border>

        <Button Grid.Column="0" Grid.Row="1" Click="ButtonCancel_OnClick" Margin="10"
                HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">
            <StackPanel Spacing="10" Orientation="Horizontal">
                <TextBlock Text="Cancel" VerticalAlignment="Center"/>
                <SymbolIcon Symbol="Delete"/>
            </StackPanel>
        </Button>

        <Button Grid.Column="2" Grid.Row="1" Click="ButtonSave_OnClick" Margin="10"
                HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">
            <StackPanel Spacing="10" Orientation="Horizontal">
                <TextBlock Text="Save Recipe" VerticalAlignment="Center"/>
                <SymbolIcon Symbol="Save"/>
            </StackPanel>
        </Button>

        <ListView Grid.Column="3" Grid.Row="0" Grid.ColumnSpan="2" x:Name="ChatListView"
                  CornerRadius="8" BorderThickness="1" Margin="10"
                  BorderBrush="{ThemeResource OutlineColor}"
                  ItemsSource="{x:Bind Messages}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:AiMessage">
                    <StackPanel Background="{ThemeResource SurfaceColor}" Margin="{x:Bind Margin, Mode=OneWay}" HorizontalAlignment="Stretch">
                        <TextBlock Text="{x:Bind Sender}" FontWeight="Bold"/>
                        <TextBlock Text="{x:Bind Message}" TextWrapping="Wrap"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBox Grid.Column="3" Grid.Row="1" Margin="10" Padding="0" MinHeight="0" Text="{x:Bind UserInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" TextWrapping="Wrap"/>

        <Button Grid.Column="4" Grid.Row="1" Click="ButtonSend_OnClick" Margin="10"
                HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" IsEnabled="{x:Bind SendButtonEnabled, Mode=OneWay}">
                <Grid>
                    <SymbolIcon Symbol="Send" Visibility="{x:Bind IsNotResponding, Mode=OneWay}"/>
                    <ProgressRing IsActive="True" Visibility="{x:Bind IsResponding, Mode=OneWay}"/>
                </Grid>
        </Button>
    </Grid>
</local:NavigatorPage>

