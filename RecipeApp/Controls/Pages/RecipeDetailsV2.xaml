<pages:NavigatorPage
    x:Class="RecipeApp.Controls.Pages.RecipeDetailsV2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:pages="clr-namespace:RecipeApp.Controls.Pages"
    xmlns:controls="clr-namespace:RecipeApp.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <StackPanel>
            <Grid Height="124">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.RowSpan="2"
                        Margin="10"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        CornerRadius="10"
                        BorderThickness="2"
                        BorderBrush="{ThemeResource PrimaryColor}"
                        Background="{ThemeResource SurfaceVariantColor}"
                        PointerEntered="ImageGrid_OnPointerEntered"
                        PointerExited="ImageGrid_OnPointerExited"
                        PointerReleased="ImageGrid_OnPointerReleased">
                    <Image
                        Source="{x:Bind SavedRecipe.ImageUrl, Mode=OneWay}"
                        Width="100" Height="100"
                        Stretch="UniformToFill" IsHitTestVisible="False"/>
                    <SymbolIcon Width="100" Height="100" Symbol="Edit" Visibility="{x:Bind EditImageHover, Mode=OneWay}" IsHitTestVisible="False"/>
                </Grid>

                <controls:UCClickToEditText Grid.Column="1" Grid.Row="0"
                           EditableText="{x:Bind SavedRecipe.Title, Mode=TwoWay}"
                           FontWeight="Bold"
                           FontSize="28"
                           Margin="10,10,10,0"
                           VerticalAlignment="Center"/>

                <RatingControl Grid.Column="1" Grid.Row="1"
                               Value="{x:Bind SavedRecipe.Rating, Mode=TwoWay}"
                               MaxRating="{x:Bind SavedRecipe.BindableMaxRating}"
                               Margin="10,0,10,10"
                               HorizontalAlignment="Left"/>
            </Grid>

            <StackPanel Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        Margin="10"
                        CornerRadius="8"
                        Padding="16">
                <TextBlock FontSize="20" FontWeight="Bold" Text="Description"/>
                <controls:UCClickToEditText
                    EditableText="{x:Bind SavedRecipe.Description, Mode=TwoWay}"
                    FontSize="16"
                    AcceptsReturn="True"
                    Margin="0,8,0,0"/>
            </StackPanel>

            <StackPanel Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        Margin="10"
                        CornerRadius="8"
                        Padding="16">
                <TextBlock FontSize="20" FontWeight="Bold" Text="Notes"/>
                <controls:UCClickToEditText
                    EditableText="{x:Bind SavedRecipe.UserNote, Mode=TwoWay}"
                    FontSize="16"
                    AcceptsReturn="True"
                    Margin="0,8,0,0"/>
            </StackPanel>

            <StackPanel Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        Margin="10"
                        CornerRadius="8"
                        Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock FontSize="20" FontWeight="Bold" Text="Instructions/Ingredients Overview"/>
                    <Button Grid.Column="1" Click="ButtonBase_OnClick">
                        <SymbolIcon Symbol="Edit"/>
                    </Button>
                </Grid>

                <Grid>
                    <TextBlock Text="{x:Bind SavedRecipe.RootStepNode.BindableDescription, Mode=OneWay}"/>

                    <!--TODO: list of recipe steps here if simple editor and allow for one time toggle to advanced editor-->
                </Grid>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</pages:NavigatorPage>

