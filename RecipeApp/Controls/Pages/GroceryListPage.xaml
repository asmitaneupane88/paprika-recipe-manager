<local:NavigatorPage
    x:Class="RecipeApp.Controls.Pages.GroceryListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RecipeApp.Controls.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:RecipeApp.Models"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Grid.Row="0" Margin="10,0,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Grid.Column="0" Click="ButtonAddIngredient_OnClick" HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal" Spacing="8" IsHitTestVisible="False" Margin="10">
                <TextBlock Text="Add Ingredient" VerticalAlignment="Center" IsHitTestVisible="False"/>
                <SymbolIcon Symbol="Add" IsHitTestVisible="False"/>
            </StackPanel>
        </Button>

        <StackPanel Grid.Row="0" Grid.Column="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Click="ButtonPurchased_OnClick"
                    IsEnabled="{x:Bind CardsSelected, Mode=OneWay}"
                    Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal" Spacing="8" IsHitTestVisible="False" Margin="10">
                    <TextBlock Text="Purchased" VerticalAlignment="Center" IsHitTestVisible="False"/>
                    <SymbolIcon Symbol="Shop" IsHitTestVisible="False"/>
                </StackPanel>
            </Button>

            <Button Click="ButtonRemoveIngredient_OnClick"
                    IsEnabled="{x:Bind CardsSelected, Mode=OneWay}">
                <StackPanel Orientation="Horizontal" Spacing="8" IsHitTestVisible="False" Margin="10">
                    <TextBlock Text="Remove Ingredients" VerticalAlignment="Center" IsHitTestVisible="False"/>
                    <SymbolIcon Symbol="Delete" IsHitTestVisible="False"/>
                </StackPanel>
            </Button>

        </StackPanel>

        <Grid Grid.Row="1"
              Grid.Column="0"
              Grid.ColumnSpan="3"
              CornerRadius="8"
              Background="{ThemeResource SurfaceVariantColor}"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Produce" FontWeight="Bold" HorizontalAlignment="Stretch" FontSize="16"
                       Margin="8,12,0,6" Width="80"/>

        </Grid>

        <Grid Grid.Row="2"
              Grid.Column="0"
              Grid.ColumnSpan="3"
              CornerRadius="8"
              Background="{ThemeResource SurfaceVariantColor}"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Quantity" FontWeight="Bold" HorizontalAlignment="Center" Width="80"/>
            <TextBlock Grid.Column="1" Text="Unit" FontWeight="Bold" HorizontalAlignment="Center" Width="80"/>
            <TextBlock Grid.Column="2" Text="Ingredient" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="3" Text="Note" FontWeight="Bold" HorizontalAlignment="Center" Width="150"/>
            <TextBlock Grid.Column="4" Text="Category" FontWeight="Bold" HorizontalAlignment="Center" Width="120" Margin="10,4"/>
        </Grid>

        <ListView
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            ItemsSource="{x:Bind ProduceIngredients, Mode=OneWay}">

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:IngredientCard">
                    <Border BorderBrush="{ThemeResource OutlineColor}" BorderThickness="0" Margin="2" Padding="2" CornerRadius="8" Tag="{x:Bind}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <NumberBox Grid.Column="0"
                                       PlaceholderText="Qty"
                                       Value="{Binding Ingredient.Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center"
                                       Minimum="0"
                                       Width="70"
                                       Margin="5,0"/>

                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding Ingredient.GroceryUnitOptions}"
                                      SelectedItem="{Binding Ingredient.Unit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Width="90"/>

                            <TextBox Grid.Column="2" Text="{Binding Ingredient.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch"/>
                            <TextBox Grid.Column="3" Text="{Binding Ingredient.ModifierNote, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                            <ComboBox Grid.Column="4"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      ItemsSource="{Binding Ingredient.CategoryOptions}"
                                      SelectedItem="{Binding Ingredient.Category, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Width="140"
                                      PlaceholderText="Select Category"/>

                            <CheckBox
                                Grid.Column="5"
                                IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                Checked="OnRecipeCardChecked"
                                Unchecked="OnRecipeCardChecked"
                                VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>



        <Grid Grid.Row="4"
              Grid.Column="0"
              Grid.ColumnSpan="3"
              CornerRadius="8"
              Background="{ThemeResource SurfaceVariantColor}"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Dairy" FontWeight="Bold" HorizontalAlignment="Stretch" FontSize="16"
                       Margin="8,12,0,6" />

        </Grid>

        <Grid Grid.Row="5"
