                            <CheckBox
                                Grid.Column="5"
                                IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                Checked="OnRecipeCardChecked"
                                Unchecked="OnRecipeCardChecked"
                                VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Grid Grid.Row="10"
              Grid.Column="0"
              Grid.ColumnSpan="3"
              CornerRadius="8"
              Background="{ThemeResource SurfaceVariantColor}"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Spices and Baking" FontWeight="Bold" HorizontalAlignment="Stretch" FontSize="16"
                       Margin="8,12,0,6" />

        </Grid>

        <Grid Grid.Row="11"
              Grid.Column="0"
              Grid.ColumnSpan="3"
              CornerRadius="8"
              Background="{ThemeResource SurfaceVariantColor}"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Quantity" FontWeight="Bold" HorizontalAlignment="Center" Width="80"/>
            <TextBlock Grid.Column="1" Text="Unit" FontWeight="Bold" HorizontalAlignment="Center" Width="80"/>
            <TextBlock Grid.Column="2" Text="Ingredient" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="3" Text="Note" FontWeight="Bold" HorizontalAlignment="Center" Width="150"/>
            <TextBlock Grid.Column="4" Text="Category" FontWeight="Bold" HorizontalAlignment="Center" Width="120" Margin="10,4"/>
        </Grid>
        <ListView
            Grid.Row="12"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            ItemsSource="{x:Bind BakingIngredients, Mode=OneWay}">

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:IngredientCard">
                    <Border BorderBrush="{ThemeResource OutlineColor}" BorderThickness="0" Margin="2" Padding="2" CornerRadius="8" Tag="{x:Bind}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <NumberBox Grid.Column="0"
                                       PlaceholderText="Qty"
                                       Value="{Binding Ingredient.Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center"
                                       Minimum="0"
                                       Width="70"
                                       Margin="5,0"/>

                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding Ingredient.GroceryUnitOptions}"
                                      SelectedItem="{Binding Ingredient.Unit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Width="90"/>

                            <TextBox Grid.Column="2" Text="{Binding Ingredient.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch"/>
                            <TextBox Grid.Column="3" Text="{Binding Ingredient.ModifierNote, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                            <ComboBox Grid.Column="4"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      ItemsSource="{Binding Ingredient.CategoryOptions}"
                                      SelectedItem="{Binding Ingredient.Category, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Width="140"
                                      PlaceholderText="Select Category"/>

                            <CheckBox
                                Grid.Column="5"
                                IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                Checked="OnRecipeCardChecked"
                                Unchecked="OnRecipeCardChecked"
                                VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Grid Grid.Row="13"
              Grid.Column="0"
              Grid.ColumnSpan="3"
              CornerRadius="8"
              Background="{ThemeResource SurfaceVariantColor}"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Other" FontWeight="Bold" HorizontalAlignment="Stretch" FontSize="16"
                       Margin="8,12,0,6"/>

        </Grid>

        <Grid Grid.Row="14"
              Grid.Column="0"
              Grid.ColumnSpan="3"
              CornerRadius="8"
              Background="{ThemeResource SurfaceVariantColor}"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Quantity" FontWeight="Bold" HorizontalAlignment="Center" Width="80"/>
            <TextBlock Grid.Column="1" Text="Unit" FontWeight="Bold" HorizontalAlignment="Center" Width="80"/>
            <TextBlock Grid.Column="2" Text="Ingredient" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="3" Text="Note" FontWeight="Bold" HorizontalAlignment="Center" Width="150"/>
            <TextBlock Grid.Column="4" Text="Category" FontWeight="Bold" HorizontalAlignment="Center" Width="120" Margin="10,4"/>
        </Grid>
        <ListView
            Grid.Row="15"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            ItemsSource="{x:Bind OtherIngredients, Mode=OneWay}">

            <ListView.ItemTemplate>
