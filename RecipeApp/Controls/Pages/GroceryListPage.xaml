<local:NavigatorPage
    x:Class="RecipeApp.Controls.Pages.GroceryListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RecipeApp.Controls.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:RecipeApp.Models"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Click="ButtonAddGrocery_OnClick">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <SymbolIcon Symbol="Add"/>
                    <TextBlock Text="Add Grocery"/>
                </StackPanel>
            </Button>

            <Button Grid.Row="0" Grid.Column="2" Click="ButtonRemoveIngredient_OnClick" HorizontalAlignment="Right" IsEnabled="{x:Bind AnySelected, Mode=OneWay}">
                <StackPanel Orientation="Horizontal" Spacing="8" IsHitTestVisible="False" Margin="10">
                    <TextBlock Text="Remove Ingredients" VerticalAlignment="Center" IsHitTestVisible="False"/>
                    <SymbolIcon Symbol="Delete" IsHitTestVisible="False"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Header row -->
        <Grid Grid.Row="1"
              Grid.Column="0"
              Grid.ColumnSpan="3"
              CornerRadius="8"
              Background="{ThemeResource SurfaceVariantColor}"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Ingredient" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="1" Text="Modifier Note" FontWeight="Bold" HorizontalAlignment="Center" Width="200"/>
            <TextBlock Grid.Column="2" Text="Quantity" FontWeight="Bold" HorizontalAlignment="Center" Width="150"/>
            <TextBlock Grid.Column="3" Text="IsPurchased" FontWeight="Bold" HorizontalAlignment="Center" Width="100"/>
        </Grid>

        <!-- Grocery list -->
        <ListView
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            x:Name="GroceryListView"
            ItemsSource="{x:Bind allGroceries, Mode=OneWay}"
            SelectionMode="None"
            Margin="10,0,10,10">

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:GroceryItem">
                    <Border BorderBrush="{ThemeResource OutlineColor}"
                            BorderThickness="1" Margin="10" Padding="10" CornerRadius="8" Tag="{x:Bind}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" Text="{Binding PIngredient.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch"/>
                            <TextBox Grid.Column="1" Text="{Binding PIngredient.ModifierNote, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200"/>

                            <!-- ~1~ Item name @1@ -->
                            <!-- <TextBox Grid.Column="0" -->
                            <!--          Text="{Binding Ingredient.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" -->
                            <!--          PlaceholderText="Grocery item"/> -->

                            <!-- Quantity -->
                            <NumberBox Grid.Column="1"
                                       Value="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       Minimum="0"
                                       PlaceholderText="Qty"/>
                            <!-- -->
                            <!-- ~1~ Purchased checkbox triggers auto-move @1@ -->

                            <CheckBox Grid.Column="2"
                                      Content="Purchased"
                                      IsChecked="{Binding IsPurchased, Mode=TwoWay}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</local:NavigatorPage>
