                                       Margin="5,0"/>

                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding Ingredient.GroceryUnitOptions}"
                                      SelectedItem="{Binding Ingredient.Unit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Width="90"/>

                            <TextBox Grid.Column="2" Text="{Binding Ingredient.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch"/>
                            <TextBox Grid.Column="3" Text="{Binding Ingredient.ModifierNote, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                            <ComboBox Grid.Column="4"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      ItemsSource="{Binding Ingredient.CategoryOptions}"
                                      SelectedItem="{Binding Ingredient.Category, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Width="140"
                                      PlaceholderText="Select Category"/>

                            <CheckBox
                                Grid.Column="5"
                                IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                Checked="OnRecipeCardChecked"
