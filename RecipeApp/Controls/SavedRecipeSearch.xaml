<UserControl
    x:Class="RecipeApp.Controls.SavedRecipeSearch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RecipeApp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:RecipeApp.Models"
    mc:Ignorable="d">

     <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

         <TextBox
             Grid.Row="0"
             Grid.Column="0"
             PlaceholderText="Recipe Title"
             Margin="10"
             Text="{x:Bind SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
             Width="200"/>

         <!-- note that placeholder text does not render correctly -->
         <ComboBox x:Name="TagCombo"
                   Grid.Row="0"
                   Grid.Column="1"
                   Margin="10"
                   Width="200"
                   SelectionChanged="OnTagComboSelectionChanged"
                   ItemsSource="{x:Bind FilteredTags, Mode=OneWay}"
                   DisplayMemberPath="Name"/>

         <ScrollView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
             <StackPanel Orientation="Horizontal">
                 <ItemsRepeater ItemsSource="{x:Bind SelectedTags}">
                     <ItemsRepeater.Layout>
                         <StackLayout Orientation="Horizontal" Spacing="5"/>
                     </ItemsRepeater.Layout>

                     <ItemsRepeater.ItemTemplate>
                         <DataTemplate x:DataType="models:SavedTag">
                             <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                         BorderBrush="{ThemeResource OutlineColor}"
                                         Background="{ThemeResource SurfaceVariantColor}"
                                         BorderThickness="1" Padding="5" CornerRadius="16" Margin="5"
                                         Tag="{x:Bind}" PointerPressed="TagCard_OnPointerPressed">
                                 <TextBlock Text="{x:Bind Name}" VerticalAlignment="Center" Margin="5"/>
                                 <SymbolIcon Symbol="Cancel"/>
                             </StackPanel>
                         </DataTemplate>
                     </ItemsRepeater.ItemTemplate>
                 </ItemsRepeater>
             </StackPanel>
         </ScrollView>

        <ListView
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            ItemsSource="{x:Bind FilteredRecipes, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:RecipeCard">
                    <Border BorderBrush="{ThemeResource OutlineColor}" BorderThickness="1" Margin="5" Padding="0" CornerRadius="8" Tag="{x:Bind}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Margin="5"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    CornerRadius="10"
                                    BorderThickness="2"
                                    BorderBrush="{ThemeResource PrimaryColor}"
                                    Background="{ThemeResource SurfaceVariantColor}">
                                <Image
                                    Source="{x:Bind SavedRecipe.ImageUrl}"
                                    Width="40" Height="40"
                                    Stretch="UniformToFill"/>
                            </Border>


                            <StackPanel Grid.Column="1" VerticalAlignment="Center"
                                        Margin="5" >
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="{x:Bind SavedRecipe.Title}"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               MaxLines="1"
                                               VerticalAlignment="Center"/>

                                    <RatingControl Grid.Column="1"
                                                   Value="{x:Bind SavedRecipe.Rating}"
                                                   MaxRating="{x:Bind SavedRecipe.BindableMaxRating}"
                                                   IsReadOnly="True"/>

                                    <!--Got to use "Binding" here over x:Bind-->
                                    <CheckBox
                                        Grid.Column="2"
                                        IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                        Checked="OnRecipeCardChecked"
                                        Unchecked="OnRecipeCardChecked"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>

