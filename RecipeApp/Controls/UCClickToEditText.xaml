<UserControl
    x:Class="RecipeApp.Controls.UCClickToEditText"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RecipeApp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <TextBlock x:Name="DisplayText"
                   Text="{x:Bind EditableText, Mode=OneWay}"
                   FontSize="{x:Bind FontSize, Mode=OneWay}"
                   FontWeight="{x:Bind FontWeight, Mode=OneWay}"
                   PointerPressed="OnTextClicked"
                   PointerEntered="DisplayText_OnPointerEntered"
                   PointerExited="DisplayText_OnPointerExited"
                   Visibility="Visible" Padding="0" Margin="0"/>
        <TextBox x:Name="EditText"
                 Text="{x:Bind EditableText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="{x:Bind FontSize, Mode=OneWay}"
                 FontWeight="{x:Bind FontWeight, Mode=OneWay}"
                 LostFocus="OnEditLostFocus"
                 AcceptsReturn="{x:Bind AcceptsReturn}"
                 Visibility="Collapsed"
                 Padding="0" Margin="0"/>
        <SymbolIcon VerticalAlignment="Center" HorizontalAlignment="Center" Symbol="Edit" Visibility="{x:Bind EditImageHover, Mode=OneWay}" IsHitTestVisible="False" Margin="0"/>

    </Grid>
</UserControl>

