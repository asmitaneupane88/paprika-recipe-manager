<Project Sdk="Uno.Sdk">
    <PropertyGroup>
        <TargetFrameworks>net9.0-desktop;net9.0</TargetFrameworks>

        <GenerateDocumentationFile>true</GenerateDocumentationFile>

        <OutputType>Exe</OutputType>
        <UnoSingleProject>true</UnoSingleProject>

        <!-- Display name -->
        <ApplicationTitle>RecipeApp</ApplicationTitle>
        <!-- App Identifier -->
        <ApplicationId>com.companyname.RecipeApp</ApplicationId>
        <!-- Versions -->
        <ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
        <ApplicationVersion>1</ApplicationVersion>
        <!-- Package Publisher -->
        <ApplicationPublisher>O=RecipeApp</ApplicationPublisher>
        <!-- Package Description -->
        <Description>RecipeApp powered by Uno Platform.</Description>

        <!--
          UnoFeatures let's you quickly add and manage implicit package references based on the features you want to use.
          https://aka.platform.uno/singleproject-features
        -->
        <UnoFeatures>
            Material;
            Dsp;
            Toolkit;
            MVUX;
            ThemeService;
            SkiaRenderer;
            WebView;
        </UnoFeatures>
        <LangVersion>preview</LangVersion>
    </PropertyGroup>
    <ItemGroup>
      <PackageReference Include="AutoGen" />
      <PackageReference Include="AutoGen.LMStudio" />
      <PackageReference Include="PuppeteerSharp" />
    </ItemGroup>
    <ItemGroup>
      <PackageVersion Update="PuppeteerSharp" Version="20.2.4" />
    </ItemGroup>
    <ItemGroup>
      <Compile Update="Controls\StepControls\FinishWidget.xaml.cs">
        <DependentUpon>FinishWidget.xaml</DependentUpon>
        <IsDefaultItem>true</IsDefaultItem>
      </Compile>
      <Compile Update="Controls\StepControls\MergeWidget.xaml.cs">
        <DependentUpon>MergeWidget.xaml</DependentUpon>
        <IsDefaultItem>true</IsDefaultItem>
      </Compile>
      <Compile Update="Controls\StepControls\SplitWidget.xaml.cs">
        <DependentUpon>SplitWidget.xaml</DependentUpon>
        <IsDefaultItem>true</IsDefaultItem>
      </Compile>
      <Compile Update="Controls\StepControls\TimeWidget.xaml.cs">
        <DependentUpon>TimeWidget.xaml</DependentUpon>
        <IsDefaultItem>true</IsDefaultItem>
      </Compile>
      <Compile Update="Controls\StepControls\TextWidget.xaml.cs">
        <DependentUpon>TextWidget.xaml</DependentUpon>
        <IsDefaultItem>true</IsDefaultItem>
      </Compile>
    </ItemGroup>

</Project>
